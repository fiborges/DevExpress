@{
    ViewData["Title"] = "Generate Documents";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e3f2fd;
            color: #333;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            background-color: #ffffff;
            padding: 2em;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h1 {
            color: #1e88e5;
        }

        p {
            color: #546e7a;
        }

        form {
            margin-top: 1.5em;
        }

        select {
            padding: 0.5em;
            font-size: 1em;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 1.5em;
        }

        button {
            background-color: #1e88e5;
            color: #ffffff;
            border: none;
            padding: 0.75em 1.5em;
            font-size: 1em;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #1565c0;
            }

        footer {
            margin-top: 2em;
            color: #78909c; 
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Generate Documents</h1>
        <p>Select a name and click the button below to generate a PDF document.</p>
        <form method="post" asp-action="GenerateDocuments">
            <select name="selectedName" required>
                <option value="" disabled selected>Select a name</option>
                @foreach (var name in ViewBag.Names)
                {
                    <option value="@name">@name</option>
                }
            </select>
            <br />
            <button type="submit">Generate PDF</button>
        </form>
    </div>
</body>
</html>
